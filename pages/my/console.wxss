/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.account-header {
  position: relative;
  background-color: #fff;
  padding-bottom: 10px;
}
.account-header:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #E5E5E5;
  color: #E5E5E5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.account-header-sign {
  position: absolute;
  top: 40px;
  right: 20px;
  font-size: 14px;
  color: #ffc200;
  line-height: 32px;
  padding-left: 28px;
  background: url(https://m.waitui.com/htdocs/mobile/images/account-header-sign.png) no-repeat;
  background-size: 24px;
  background-position: 0 center;
}
.account-header-sign.signed {
  right: 6px;
  color: #ccc;
  background-image: url(https://m.waitui.com/htdocs/mobile/images/account-header-signed.png);
}
.account-header-sign.signed:after {
  display: none;
}
.account-header-sign:after {
  content: "";
  position: absolute;
  right: -8px;
  top: 14px;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background-color: #ffc200;
}
.account-header-info {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30px 30px 15px 30px;
  align-items: center;
}
.account-header-info .account-header-figure {
  width: 68px;
  height: 68px;
  margin-right: 15px;
}
.account-header-info .account-header-figure image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.account-header-info .account-header-name {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}
.account-header-info .account-header-name .wx-h4 {
  font-size: 18px;
  font-weight: 400;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.account-header-info .account-header-name .wx-h4 .wx-a {
  display: inline;
  color: #333;
}
.account-header-info .account-header-name .wx-p {
  font-size: 14px;
  color: #999;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.account-header-info .account-header-name .wx-p .wx-a {
  color: #999;
}
.account-header-tab {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 15px;
  justify-content: space-between;
}
.account-header-tab .wx-a {
  width: 200rpx;
  text-align: center;
  color: #333;
}
.account-header-tab .wx-a .wx-h4 {
  font-size: 16px;
  font-weight: 400;
  color: #333;
}
.account-header-tab .wx-a .wx-p {
  font-size: 14px;
  color: #999;
  line-height: 1.4;
}
