/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.company-list {
  margin-top: 10px;
}
.company-list .company-item {
  display: block;
  position: relative;
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
}
.company-list .company-item .wx-h3 {
  font-size: 18px;
  color: #5195d5;
  font-weight: normal;
  height: 28px;
  line-height: 28px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}
.company-list .company-item .item-row {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.company-list .company-item .item-row .item-cols {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.company-list .company-item .item-row .item-cols .wx-h4 {
  font-size: 13px;
  font-weight: normal;
  color: #999;
  line-height: 24px;
}
.company-list .company-item .item-row .item-cols .wx-p {
  font-size: 14px;
  color: #333;
}
