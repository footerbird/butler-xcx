/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.intention-page .intention-page__title {
  border-bottom: 1px solid #efefef;
}
.intention-page .intention-page__title .wx-span {
  border-left: 5px solid #ea6f5a;
  padding-left: 10px;
  font-size: 14px;
}
.intention-page .van-button-area {
  padding: 10px 16px;
}
.intention-page .home-link {
  display: block;
  width: 50%;
  margin: 20px auto;
}
.intention-page .home-link image {
  display: block;
  width: 80%;
  margin: 0 auto;
}
.intention-page .customer-service {
  display: inline-block;
  height: 38px;
  line-height: 38px;
  padding: 0 25px;
  font-size: 14px;
  color: #13426b;
  background: #fafafa;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}
