/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.sort-block {
  margin-top: 10px;
  padding: 15rpx;
  background-color: #fff;
}
.sort-block .title {
  position: relative;
  font-size: 16px;
  font-weight: bold;
  height: 48px;
  line-height: 50px;
  padding-left: 20px;
  border-bottom: 1px dashed #dae9ee;
}
.sort-block .title:after {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 3px;
  height: 20px;
  background-color: #00c1de;
  margin-top: -10px;
}
.sort-block .summary {
  font-size: 13px;
  color: #666;
  text-indent: 26px;
  line-height: 24px;
  padding: 20px 15rpx 15px 15rpx;
}
.sort-block .list:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.sort-block .list .item {
  float: left;
  position: relative;
  width: 330rpx;
  overflow: hidden;
  padding: 10px 10px 10px 15px;
  border: 1px solid #e5e5e5;
  margin: 15rpx;
}
.sort-block .list .item .item-thumb {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 32px;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
}
.sort-block .list .item .item-title {
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  text-align: right;
  line-height: 32px;
  margin-bottom: 10px;
}
.sort-block .list .item .item-summary {
  font-size: 12px;
  color: #666;
  line-height: 18px;
  width: 100%;
  height: 125px;
  overflow: hidden;
}
.sort-block .list .item:hover {
  border-color: #00c1de;
}
.sort-block .list .item.cur .item-title {
  color: #ea6f5a;
}
