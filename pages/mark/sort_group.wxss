/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.sort-detail {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.sort-detail .info-table {
  height: 100%;
}
.sort-detail .info-table:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.sort-detail .info-table .table-left {
  float: left;
  width: 180rpx;
  height: 100%;
  overflow: auto;
}
.sort-detail .info-table .table-left .item-box {
  width: 100%;
  min-height: 100%;
  background-color: #f6f6f8;
  border-right: 1px solid #e5e5e5;
}
.sort-detail .info-table .table-left .item-box .item {
  display: block;
  position: relative;
  font-size: 13px;
  color: #333;
  text-align: center;
  line-height: 20px;
  padding: 15px 0;
  background-color: #f6f6f8;
  border-bottom: 1px solid #e5e5e5;
}
.sort-detail .info-table .table-left .item-box .item.cur {
  color: #00c1de;
  background-color: #fff;
}
.sort-detail .info-table .table-left .item-box .item.cur:after {
  content: '';
  position: absolute;
  top: 0;
  right: -1px;
  width: 1px;
  height: 100%;
  background-color: #fff;
}
.sort-detail .info-table .table-right {
  float: right;
  width: 570rpx;
  height: 100%;
  overflow: auto;
  padding: 15px 10px;
}
.sort-detail .info-table .table-right .summary-box {
  border: 1px solid #00c1de;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
.sort-detail .info-table .table-right .summary-box .summary-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  text-align: center;
  line-height: 20px;
  padding: 10px 15px;
}
.sort-detail .info-table .table-right .summary-box .summary {
  position: relative;
  display: block;
  font-size: 12px;
  color: #666;
  line-height: 20px;
  padding: 10px 15px;
}
.sort-detail .info-table .table-right .summary-box .summary:before {
  content: '';
  position: absolute;
  left: 15px;
  top: 0;
  right: 15px;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.sort-detail .info-table .table-right .item-box {
  border: 1px solid #ababab;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
.sort-detail .info-table .table-right .item-box .item-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  text-align: center;
  line-height: 20px;
  padding: 10px 15px;
}
.sort-detail .info-table .table-right .item-box .item {
  position: relative;
  display: block;
  font-size: 12px;
  color: #666;
  line-height: 20px;
  padding: 10px 25px 10px 15px;
}
.sort-detail .info-table .table-right .item-box .item .item-wrap {
  max-height: 40px;
  overflow: hidden;
}
.sort-detail .info-table .table-right .item-box .item:before {
  content: '';
  position: absolute;
  left: 15px;
  top: 0;
  right: 15px;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.sort-detail .info-table .table-right .item-box .item.item-group {
  text-indent: -5px;
}
.sort-detail .info-table .table-right .item-box .item.item-group:after {
  content: '';
  position: absolute;
  right: 15px;
  top: 50%;
  width: 10px;
  height: 10px;
  margin-top: -5px;
  background: url(https://m.waitui.com/htdocs/mobile/images/mark-sort-arrow.png) no-repeat;
  background-size: 100% 100%;
}
