/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.mark-list {
  padding: 15rpx;
  background-color: #fff;
}
.mark-list:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.mark-list .mark-item {
  float: left;
  width: 330rpx;
  position: relative;
  margin: 15rpx;
  border: 1px solid #dcdcdc;
  border-radius: 5px;
  padding: 5px 10px;
}
.mark-list .mark-item .thumb-box {
  display: block;
  width: 240rpx;
  height: 180rpx;
  line-height: 180rpx;
  text-align: center;
  margin: 0 auto;
}
.mark-list .mark-item .thumb-box .thumb {
  display: inline-block;
  max-width: 240rpx;
  max-height: 180rpx;
  vertical-align: middle;
}
.mark-list .mark-item .category {
  font-size: 13px;
  color: #666;
  height: 24px;
  line-height: 24px;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mark-list .mark-item .category .wx-i {
  display: inline-block;
  width: 1px;
  height: 12px;
  background-color: #e0e0e0;
  margin: 0 10px;
  position: relative;
  top: 2px;
}
.mark-list .mark-item .price-btn {
  display: block;
  width: 90%;
  height: 30px;
  line-height: 30px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  font-size: 13px;
  color: #fff;
  background-color: #20b998;
  text-align: center;
  margin: 5px auto;
}
