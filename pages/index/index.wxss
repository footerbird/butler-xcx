/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.entry-banner {
  display: block;
  width: 100%;
  height: 360rpx;
  background-color: #fff;
}
.entry-banner .swiper-slide {
  display: block;
  width: 100%;
  height: 100%;
}
.entry-banner .swiper-slide image {
  display: block;
  width: 100%;
  height: 100%;
}
.entry-subject {
  margin-top: 15px;
  background-color: #fff;
  padding: 0 15px;
}
.entry-subject .entry-subject-grids {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
}
.entry-subject .entry-subject-grids .item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  line-height: 70px;
  text-align: center;
  font-family: PingFang SC Bold;
  font-size: 14px;
  font-weight: bold;
  color: #333;
}
.entry-subject .entry-subject-grids .item.mid {
  -webkit-box-flex: 1.1;
  -webkit-flex: 1.1;
  flex: 1.1;
}
.entry-subject .entry-subject-grids .item.mid:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 1px;
  height: 30px;
  background-color: #f1f1f1;
  margin-top: -15px;
  -webkit-transform-origin: center center;
  transform-origin: center center;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.entry-subject .entry-subject-grids .item.mid:after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  width: 1px;
  height: 30px;
  background-color: #f1f1f1;
  margin-top: -15px;
  -webkit-transform-origin: center center;
  transform-origin: center center;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.entry-subject .entry-subject-grids .item .wx-i.user {
  display: inline-block;
  width: 18px;
  height: 18px;
  background: url(https://m.waitui.com/htdocs/mobile/images/entry/entry_subject_user.png) no-repeat;
  background-size: 100% 100%;
  vertical-align: -4px;
  margin-right: 8px;
}
.entry-subject .entry-subject-grids .item .wx-i.fire {
  display: inline-block;
  width: 18px;
  height: 18px;
  background: url(https://m.waitui.com/htdocs/mobile/images/entry/entry_subject_fire.png) no-repeat;
  background-size: 100% 100%;
  vertical-align: -4px;
  margin-right: 8px;
}
.entry-subject .entry-subject-grids .item .wx-i.crown {
  display: inline-block;
  width: 18px;
  height: 18px;
  background: url(https://m.waitui.com/htdocs/mobile/images/entry/entry_subject_crown.png) no-repeat;
  background-size: 100% 100%;
  vertical-align: -4px;
  margin-right: 8px;
}
.entry-subject .entry-subject-grids .item .wx-i.hot {
  position: absolute;
  left: 48px;
  top: 6px;
  width: 32px;
  height: 18px;
  background: url(https://m.waitui.com/htdocs/mobile/images/entry/entry_subject_hot.png) no-repeat;
  background-size: 100% 100%;
}
.entry-subject .entry-subject-grids:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  border-bottom: 1px solid #f0f0f0;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
