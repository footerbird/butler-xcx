/*变量*/
/*常用的一些混合*/
.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.after-cls:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.display-flex {
  display: -webkit-box;
  display: -moz-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.forbid {
  opacity: 0.8 !important;
  cursor: not-allowed;
}
.domain-detail .info-top {
  margin-top: 10px;
  background-color: #fff;
  padding: 15px;
}
.domain-detail .info-top .wx-h4 {
  font-size: 28px;
  font-weight: normal;
  color: #5195d5;
  height: 28px;
  line-height: 28px;
  margin-bottom: 10px;
}
.domain-detail .info-top .summary {
  font-size: 13px;
  color: #666;
  line-height: 20px;
  padding: 2px 0;
}
.domain-detail .info-list {
  margin-top: 10px;
  background-color: #fff;
  padding: 0 15px;
}
.domain-detail .info-list .wx-h4 {
  font-size: 16px;
  font-weight: normal;
  height: 48px;
  line-height: 50px;
  border-bottom: 1px solid #e5e5e5;
}
.domain-detail .info-list .wx-dl:after {
  content: " ";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.domain-detail .info-list .wx-dl .wx-dt {
  float: left;
  width: 160rpx;
  font-size: 13px;
  color: #999;
  line-height: 32px;
  padding: 3px 0;
}
.domain-detail .info-list .wx-dl .wx-dd {
  margin-left: 160rpx;
  font-size: 14px;
  color: #333;
  line-height: 32px;
  padding: 3px 10px;
}
